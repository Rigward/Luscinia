<Page x:Class="AudioCloud.Sender.SenderController"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="SenderController">

    <Grid Name="_Grid">
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        
        
        <TextBox Name="Password" HorizontalAlignment="Center" Height="23" Margin="0,20,0,0" TextWrapping="Wrap" Width="120" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16" FontFamily="Calibri" Cursor="Arrow" IsHitTestVisible="True"/>
        <Button Content="Connect" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Center" Width="75" Click="Button_Click"/>
        <TextBlock Name ="Help"  HorizontalAlignment="Center" Margin="0 0 0 50" TextWrapping="Wrap" Text="Enter password:" VerticalAlignment="Center" FontSize="20" FontFamily="Calibri"/>

    </Grid>
       
</Page>
